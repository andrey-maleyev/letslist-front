body:before {
  content:'';
  height:100%;
  display:inline-block;
  vertical-align:middle;
}

#letslist {
  display:inline-block;
  color:#1AAB8A;
  margin-top:300rpx;
  font-size:100rpx;
  text-shadow: 5rpx 5rpx white;
  background:rgb(0,0,0,0.1);
}

.btn-green {
  background:#1AAB8A;
  color:#fff;
  border:none;
  position:relative;

  height:110rpx;
  width:150rpx;

  font-size:1.6em;
  cursor:pointer;
  transition:800ms ease all;
  outline:none;
  margin-top:400rpx;

  display: flex;
  align-items: center;
}

button:hover {
  background:#fff;
  color:#1AAB8A;
}

button:before, button:after {
  content:'';
  position:absolute;
  top:0;
  right:0;
  height:2rpx;
  width:0;
  background: #1AAB8A;
  transition:400ms ease all;
}

button:after {
  right:inherit;
  top:inherit;
  left:0;
  bottom:0;
}

button:hover:before, button:hover:after {
  width:100%;
  transition:800ms ease all;
}
