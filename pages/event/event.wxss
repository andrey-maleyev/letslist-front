page {
  font-family: sans-serif;
  background-color: rgb(245, 245, 245);
  /* padding: 0 !important; */
  height: 100vh;
  width: 100vw;
   /* margin-top:50rpx; */
}

.container{
  /* margin: 0 30rpx; */
  padding:30rpx;
}

.banner {
  background-position: center;
  padding:40rpx;
  height: 200rpx;
  display: flex;
  width: 100%;
  font-size:50rpx;
  justify-content: center;
  align-items: center;
  color: #1AAB8A;
  font-weight: bold;
  /* text-shadow: 1px 1px 3px rgba(0,0,0,0.2); */
  box-shadow: 0 0 10rpx rgba(0,0,0,0.2);
  }

.title{
  margin-top:120rpx;
  text-align:center;
  font-size:40rpx;
  font-weight:regular;
  margin-bottom:100rpx;
}

#avatar {
  border-radius: 50%;
  height: 150rpx;
  width: 150rpx;
  border: 1px solid grey;
  display: block;
  margin-right: 30rpx;

}

.invite {
  display: flex;
  margin-right: 380rpx;
  margin-top:40rpx;
