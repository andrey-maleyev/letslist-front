<cu-custom bindtap = "goToHome"isBack="{{true}}">
    <view bindtap = "goToHome"slot="backText" class = "back">Save</view>
    <view slot="content" class = "nav">Letslist</view>
</cu-custom>
<view class="container">

  <view class="banner">{{event.name}}</view>

  <view class="invite" bindtap='onShareAppMessage' open-type="share">
    <text class="cuIcon-friendadd"></text> 
    <view class="invite-txt">Invite friends</view>
    <button style='opacity: 100;' class="button" hover-class="btn-hover" bindtap='onShareAppMessage' open-type="share">INVITE</button>
  </view>

  <view class="column2">

    <view class="profile-box">
      <view class = "master">
        <text class="cuIcon-crownfill"></text>
        <view class="avatar"><image id="avatar" src="{{avatarUrl}}"></image></view>
      </view>

      <view>
       <view class="friend-name"> Maggie brings</view>
       <view wx:if="{{!a == true}}"class = "price" bindtap = "clickPrice">
        <text>input price here</text>
       </view>

       <view wx:elif="{{a == true}}">
        <form >
            <view class = "form">

              <view class="input">
                <input class = "type" placeholder="Type total price here"></input>
              </view> 

              <view class="add_price">
                <button form-type="submit" class = "add_p">Add</button>
              </view> 

            </view>    
        </form>
       </view>
      


      </view>   
    </view>
        
      <view class="view-btn">
        <text class="buy">bread</text>
        <text class="buy">item</text>
        <text class="buy">item</text>
        <text class="buy">item</text>
        <text class="buy">item</text>

      </view>
  </view>
  
  <view class="column2">
     <view class="profile-box">
        <view class = "master">
          <view class="avatar"><image id="avatar" src="{{avatarUrl}}"></image></view>
        </view>
      <view>
       <view class="friend-name"> Andrey brings</view>
       <view class = "price">
        <text>input price here</text>
       </view>
    
      </view>   
    </view>

    <view class = "two">
      <view class="view-btn">
        <text class="buy">item</text>
        <text class="buy">item</text>
        <text class="buy">item</text>
        <text class="buy">item</text>


        
      </view>
    </view>
  </view>

  <view class = "bring">
    <view class="add">
      <view>Items to bring</view>
      <view><text class="cuIcon-roundadd" bindtap="addItems"></text></view>
    </view>


    <view class="profile-box">
        <view class="view-btn">


        <block
            wx:for="{{event.not_taken_items}}"
            wx:key="index"
            wx:for-item="myItem"
        >
          
          <text class="item">{{myItem.name}}</text>

          
        </block>  


        </view>
    </view>
  </view>

</view>
