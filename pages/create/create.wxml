<!--pages/create/create.wxml-->
<cu-custom isBack="{{true}}">
    <view slot="backText" class = "back">back</view>
    <view slot="content" class = "nav">Letslist</view>
</cu-custom>
<!-- <view class="name"><text>Event name</text></view> -->
<view class = "main">
  <form>
    <view class="name"><text>Event name</text></view>
    <view class="cu-form-group margin-top">
    <input class = "type" placeholder="Type event name here"></input>
    </view>
    <view class="name"><text>Event description</text></view>

    <view class="cu-form-group margin-top">
      <textarea class = "type" maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="Type event description here"></textarea>
    </view>

    <view class="section">
    <view class="name"><text>Date</text></view>
      <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
        <view class="picker">
          <view class="cu-form-group margin-top">
            Pick the date{{date}}
          </view>
        </view>
      </picker>
    </view>
    
    <view class="section">
      <view class="name">Time<text class = "cuIcon-time"></text></view>
      <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
        <view class="picker">
          <view class="cu-form-group margin-top">
            Pick the time{{time}}
          </view>
        </view>
      </picker>
    </view>

    
    <view class="section">
      <view class="name"><text>Event type</text></view>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
        <view class="picker">
         <view class="cu-form-group margin-top">
            Pick an event{{array[index]}}
          </view>
        </view>
      </picker>
    </view>

  <view class="btn-area">
      <button form-type="submit" class = "submit">Submit</button>
      <button form-type="reset">Reset</button>
    </view>
  </form>
</view>